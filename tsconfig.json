{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "lib": ["es2015", "dom"],
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "strict": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["test/**/specs/**/*"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
